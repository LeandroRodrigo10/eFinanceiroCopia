@model IEnumerable<Data.BankAccount>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Agency)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AccountNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InitialBalance)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RegistrationUserID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RegistrationDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DesactivationUserID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DesactivationDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsActive)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bank)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Subscription)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Agency)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AccountNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InitialBalance)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RegistrationUserID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RegistrationDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DesactivationUserID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DesactivationDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsActive)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Bank.BankID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Subscription.SubscriptionID)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.BankAccountID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.BankAccountID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.BankAccountID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
